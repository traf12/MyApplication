<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApplication.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Отключаем ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Цвета -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorSurface">#111111</item>
        <item name="colorOnSurface">#FFFFFF</item>
    </style>
    <style name="DarkDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">#111111</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="titleTextColor">#FFFFFF</item>
    </style>
    <style name="MenuItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/focus_background</item> <!-- Здесь фокус будет виден -->
        <item name="android:textColor">@android:color/white</item>
    </style>




</resources>
