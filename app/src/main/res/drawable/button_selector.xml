<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Состояние фокуса -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCFFA500"/> <!-- Оранжевый с 80% прозрачности -->
            <corners android:radius="24dp"/>
            <stroke android:width="4dp" android:color="#FFA500"/> <!-- Яркая рамка -->
        </shape>
    </item>

    <!-- Обычное состояние — серый фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#444444"/> <!-- Серый фон -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>